- var iconPath = 'https://raw.githubusercontent.com/ejrinkus/roll20-character-sheets/master/DCC_Funnels_And_Followers/assets/icons'

div.hero
  -
    var basicLabels = ["Name", "Occupation", "Class"];
    var basicAttrs = ["name", "occupation", "class"];
    var basicDefaults = ["", "", "Peasant"];
    var i = 0;
  while i < 3
    div.hero-header-cell
      span.block-label #{basicLabels[i]}
      input(type="text", name=`attr_${basicAttrs[i]}`, value=`${basicDefaults[i++]}`)

  div.hero-cell

  div.hero-stat-cell(style=`background-image: url('${iconPath}/heart.png')`)
    input.stat(type="number" name=`attr_hp` value=0)
    input.stat-mod(type="number" name=`attr_hpmax` value=0 readonly)
  div.hero-stat-cell(style=`background-image: url('${iconPath}/shield.png')`)
    input.stat(type="number" style="cursor: default" name=`attr_ac` value=10 readonly)
  div.hero-stat-cell(style=`background-image: url('${iconPath}/movement.png')`)
    input.stat(type="number" style="cursor: default" name=`attr_movement` value=30 readonly)
  div.hero-stat-cell(style=`background-image: url('${iconPath}/initiative.png')`)
    input.stat(type="number" style="cursor: default" name=`attr_initiative` value=0 readonly)

  each stat in ["strength", "stamina", "agility", "personality", "intelligence", "luck"]
    div.hero-stat-cell(style=`background-image: url('${iconPath}/${stat}.png')`)
      input.stat(type="number", name=`attr_${stat}`, value=0)
      input.stat-mod(type="number", name=`attr_${stat}mod`, value=0, readonly)

  each lbl in ["HP", "AC", "MOV", "INI", "STR", "STA", "AGI", "PER", "INT", "LUC"]
    div.hero-label-cell
      span.block-label #{lbl}

  div.wrap-hero-details
    input.toggle(type="checkbox")
    span &nbsp;Details
    div.contents
      include ../hero_details/hero_details.pug
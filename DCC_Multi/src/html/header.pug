div.header
  div
    label Player Name
    input(type="text" placeholder="Player Name" name="attr_player")
  
  div
    label Character Name
    input(type="text" placeholder="Character Name" name="attr_name")
  
  div
    label Occupation
    input(type="text" placeholder="Occupation" name="attr_occupation")
  
  div
    label Class
    select(name="attr_class")
      option(value="Peasant" selected="selected") Peasant
      option(value="Cleric") Cleric
      option(value="Thief") Thief
      option(value="Warrior") Warrior
      option(value="Wizard") Wizard
      option(value="Dwarf") Dwarf
      option(value="Elf") Elf
      option(value="Halfling") Halfling
  
  div
    label Title
    input(type="text" placeholder="Title" name="attr_title")
  
  div
    label Level &amp; XP
    input.wide-number(type="number" placeholder="Level" name="attr_level")
    input.wide-number(type="number" placeholder="XP" name="attr_xp")